         </textFill>
      </Label>
   </top>
   <bottom>
      <Button fx:id="selectBtn" mnemonicParsing="false" onAction="#onClick" text="Select Movie" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <center>
      <Hyperlink fx:id="output" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Hyperlink>
   </center>
</BorderPane>
